# ============================================
# SandIronRatio Node Configuration
# ============================================
# Copy this to .env and customize for your setup

# --------------------------------------------
# SOFIE LLaMA Backend Integration
# --------------------------------------------
SOFIE_LLAMA_URL=http://localhost:8000
SOFIE_LLAMA_ENABLED=true

# API Key (if using cloud deployment)
# SOFIE_LLAMA_API_KEY=your-api-key-here

# --------------------------------------------
# Council Integration
# --------------------------------------------
COUNCIL_URL=http://localhost:9000
COUNCIL_ENABLED=true

# Auto-authorize proposals (WARNING: Use only in dev)
# COUNCIL_AUTO_AUTHORIZE=false

# --------------------------------------------
# Ollama Configuration (Local LLM)
# --------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Alternative models:
# OLLAMA_MODEL=llama3.1:70b  # Requires ~40GB VRAM
# OLLAMA_MODEL=mistral:latest

# --------------------------------------------
# Validator Configuration
# --------------------------------------------
VALIDATOR_ENABLED=false
VALIDATOR_PORT=3000
VALIDATOR_HOST=0.0.0.0

# Genesis Hive (Melbourne, Australia)
GENESIS_HIVE_LAT=-37.8136
GENESIS_HIVE_LON=144.9631
GENESIS_HIVE_CAPACITY=144000

# --------------------------------------------
# Network Configuration
# --------------------------------------------
NETWORK=testnet
# NETWORK=mainnet  # Use only when ready

# Blockchain RPC
# BLOCKCHAIN_RPC_URL=http://localhost:8545

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# LanceDB path for vector storage
LANCEDB_PATH=./data/lance

# --------------------------------------------
# Adrian's Identity (Source Operator)
# --------------------------------------------
# This is loaded from essence/adrian.ts
# Birth data: 1974-03-27 18:55 Footscray, Victoria
SOURCE_OPERATOR_NAME="Adrian Sortino"
SOURCE_OPERATOR_ANAGRAM="sandironratio"

# --------------------------------------------
# Swiss Ephemeris Settings
# --------------------------------------------
SWISS_EPHEMERIS_PATH=./data/swisseph
# Download from: https://www.astro.com/ftp/swisseph/

# Preferred Ayanamsha (Vedic only)
# AYANAMSHA=lahiri  # Default: Lahiri (Chitrapaksha)

# --------------------------------------------
# NECTAR Token Economics
# --------------------------------------------
NECTAR_INITIAL_BALANCE=1000000
NECTAR_COUNCIL_VOTE_COST=100
NECTAR_CODE_BUILD_REWARD=500

# Agent reward percentages (must sum to 100)
NECTAR_REWARD_VEDA=25    # Builder
NECTAR_REWARD_AURA=20    # Healer + Veto
NECTAR_REWARD_HEX=15     # NECTAR Keeper
NECTAR_REWARD_NODE=15    # Weaver
NECTAR_REWARD_SPARK=15   # Muse
NECTAR_REWARD_TESS=10    # Chair

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=info
# LOG_LEVEL=debug  # Verbose output for debugging

LOG_FILE=./logs/sandironratio.log

# --------------------------------------------
# Security
# --------------------------------------------
# JWT secret for API authentication
JWT_SECRET=change-this-in-production-to-a-secure-random-string

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# --------------------------------------------
# Development Flags
# --------------------------------------------
DEV_MODE=true
SKIP_BLOCKCHAIN_INIT=true
MOCK_SWISS_EPHEMERIS=true
MOCK_LANCEDB=true

# --------------------------------------------
# External APIs (Optional)
# --------------------------------------------
# HuggingFace (if not using Ollama)
# HUGGINGFACE_API_KEY=your-hf-token
# HUGGINGFACE_MODEL=meta-llama/Llama-3.1-70b-chat-hf

# OpenAI (fallback)
# OPENAI_API_KEY=your-openai-key

# --------------------------------------------
# Monitor & Alerts
# --------------------------------------------
# Discord webhook for alerts
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email notifications (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=admin@terracare.earth

# --------------------------------------------
# Advanced: Multi-Hive Configuration
# --------------------------------------------
# Number of active hives (1-10)
ACTIVE_HIVE_COUNT=1

# Hive 2-10 locations (comma-separated lat,lon pairs)
# HIVE_2_LOCATION=-33.8688,151.2093  # Sydney
# HIVE_3_LOCATION=37.7749,-122.4194   # San Francisco
# HIVE_4_LOCATION=51.5074,-0.1278     # London
# ... etc

# --------------------------------------------
# Feature Flags
# --------------------------------------------
ENABLE_CHAMBERS=true
ENABLE_OBSERVATORY=true
ENABLE_MIRROR=true
ENABLE_GOVERNANCE=false  # Not yet implemented
ENABLE_SURRENDER_RITUAL=true
